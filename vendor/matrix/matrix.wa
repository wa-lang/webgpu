
import "math"
import "vec3"

type Matrix struct {
    M: [4][4]f32
}

func Matrix.Identity() {
    this.M[0][0] = 1; this.M[0][1] = 0; this.M[0][2] = 0; this.M[0][3] = 0; 
    this.M[1][0] = 0; this.M[1][1] = 1; this.M[1][2] = 0; this.M[1][3] = 0; 
    this.M[2][0] = 0; this.M[2][1] = 0; this.M[2][2] = 1; this.M[2][3] = 0; 
    this.M[3][0] = 0; this.M[3][1] = 0; this.M[3][2] = 0; this.M[3][3] = 1; 
}

func NewPerspective(fov, aspect, n, f: f32) => Matrix {
    m: Matrix
    sin := f32(math.Sin(f64(fov) / 2.0))
    cos := f32(math.Cos(f64(fov) / 2.0))
    y := 1.0 / (sin / cos)
	x := y / aspect;

	m.M[0][0] = x; m.M[0][1] = 0; m.M[0][2] = 0;				m.M[0][3] = 0;
	m.M[1][0] = 0; m.M[1][1] = y; m.M[1][2] = 0;				m.M[1][3] = 0;
	m.M[2][0] = 0; m.M[2][1] = 0; m.M[2][2] = f / (n - f);		m.M[2][3] = -1;
	m.M[3][0] = 0; m.M[3][1] = 0; m.M[3][2] = n * f / (n - f);	m.M[3][3] = 0;

    return m
}

func NewRotateAxis(axis: vec3.Vec3, angle: f32) => Matrix {
    m: Matrix

	axis = vec3.Normalize(axis);
	sinv := f32(math.Sin(f64(angle)))
    cosv := f32(math.Cos(f64(angle)))
	m.M[0][0] = axis.X * axis.X * (1 - cosv) + cosv;          m.M[0][1] = axis.Y * axis.X * (1 - cosv) + axis.Z * sinv; m.M[0][2] = axis.Z * axis.X * (1 - cosv) - axis.Y * sinv;
	m.M[1][0] = axis.X * axis.Y * (1 - cosv) - axis.Z * sinv; m.M[1][1] = axis.Y * axis.Y * (1 - cosv) + cosv;          m.M[1][2] = axis.Z * axis.Y * (1 - cosv) + axis.X * sinv;
	m.M[2][0] = axis.X * axis.Z * (1 - cosv) + axis.Y * sinv; m.M[2][1] = axis.Y * axis.Z * (1 - cosv) - axis.X * sinv; m.M[2][2] = axis.Z * axis.Z * (1 - cosv) + cosv;
	m.M[3][3] = 1;

    return m
}

func NewTranslate(v: vec3.Vec3) => Matrix {
    m: Matrix
    m.M[0][0] = 1; m.M[1][1] = 1; m.M[2][2] = 1; m.M[3][3] = 1;
    m.M[3][0] = v.X; m.M[3][1] = v.Y; m.M[3][2] = v.Z;

    return m
}

func NewCameraTransform(cam, view, up: vec3.Vec3) => Matrix {
    za := vec3.Normalize(vec3.Sub(cam, view))
    xa := vec3.Normalize(vec3.CrossProduct(up, za))
    ya := vec3.CrossProduct(za, xa)

    m: Matrix
	m.M[0][0] = xa.X; m.M[0][1] = ya.X; m.M[0][2] = za.X; m.M[0][3] = 0;
	m.M[1][0] = xa.Y; m.M[1][1] = ya.Y; m.M[1][2] = za.Y; m.M[1][3] = 0;
	m.M[2][0] = xa.Z; m.M[2][1] = ya.Z; m.M[2][2] = za.Z; m.M[2][3] = 0;
	m.M[3][0] = -1 * vec3.DotProduct(xa, cam)
    m.M[3][1] = -1 * vec3.DotProduct(ya, cam)
    m.M[3][2] = -1 * vec3.DotProduct(za, cam)
    m.M[3][3] = 1

    return m
}

func Matrix.Mul(mat: Matrix) {
    t: [4][4]f32
	t[0][0] = this.M[0][0] * mat.M[0][0] + this.M[0][1] * mat.M[1][0] + this.M[0][2] * mat.M[2][0] + this.M[0][3] * mat.M[3][0];
	t[0][1] = this.M[0][0] * mat.M[0][1] + this.M[0][1] * mat.M[1][1] + this.M[0][2] * mat.M[2][1] + this.M[0][3] * mat.M[3][1];
	t[0][2] = this.M[0][0] * mat.M[0][2] + this.M[0][1] * mat.M[1][2] + this.M[0][2] * mat.M[2][2] + this.M[0][3] * mat.M[3][2];
	t[0][3] = this.M[0][0] * mat.M[0][3] + this.M[0][1] * mat.M[1][3] + this.M[0][2] * mat.M[2][3] + this.M[0][3] * mat.M[3][3];

	t[1][0] = this.M[1][0] * mat.M[0][0] + this.M[1][1] * mat.M[1][0] + this.M[1][2] * mat.M[2][0] + this.M[1][3] * mat.M[3][0];
	t[1][1] = this.M[1][0] * mat.M[0][1] + this.M[1][1] * mat.M[1][1] + this.M[1][2] * mat.M[2][1] + this.M[1][3] * mat.M[3][1];
	t[1][2] = this.M[1][0] * mat.M[0][2] + this.M[1][1] * mat.M[1][2] + this.M[1][2] * mat.M[2][2] + this.M[1][3] * mat.M[3][2];
	t[1][3] = this.M[1][0] * mat.M[0][3] + this.M[1][1] * mat.M[1][3] + this.M[1][2] * mat.M[2][3] + this.M[1][3] * mat.M[3][3];

	t[2][0] = this.M[2][0] * mat.M[0][0] + this.M[2][1] * mat.M[1][0] + this.M[2][2] * mat.M[2][0] + this.M[2][3] * mat.M[3][0];
	t[2][1] = this.M[2][0] * mat.M[0][1] + this.M[2][1] * mat.M[1][1] + this.M[2][2] * mat.M[2][1] + this.M[2][3] * mat.M[3][1];
	t[2][2] = this.M[2][0] * mat.M[0][2] + this.M[2][1] * mat.M[1][2] + this.M[2][2] * mat.M[2][2] + this.M[2][3] * mat.M[3][2];
	t[2][3] = this.M[2][0] * mat.M[0][3] + this.M[2][1] * mat.M[1][3] + this.M[2][2] * mat.M[2][3] + this.M[2][3] * mat.M[3][3];

	t[3][0] = this.M[3][0] * mat.M[0][0] + this.M[3][1] * mat.M[1][0] + this.M[3][2] * mat.M[2][0] + this.M[3][3] * mat.M[3][0];
	t[3][1] = this.M[3][0] * mat.M[0][1] + this.M[3][1] * mat.M[1][1] + this.M[3][2] * mat.M[2][1] + this.M[3][3] * mat.M[3][1];
	t[3][2] = this.M[3][0] * mat.M[0][2] + this.M[3][1] * mat.M[1][2] + this.M[3][2] * mat.M[2][2] + this.M[3][3] * mat.M[3][2];
	t[3][3] = this.M[3][0] * mat.M[0][3] + this.M[3][1] * mat.M[1][3] + this.M[3][2] * mat.M[2][3] + this.M[3][3] * mat.M[3][3];

    this.M = t
}
